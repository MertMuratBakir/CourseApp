@model Ogrenci

<form asp-controller="Ogrenci" asp-action="Create" method="post">
    <div class="mb-3">
        <label for="OgrenciAd" class="form-label">Öğrenci adı</label>
        <input asp-for="OgrenciAd" class="form-control">
    </div>

    <div class="mb-3">
        <label for="OgrenciSoyad" class="form-label">Öğrenci Soyad</label>
        <input asp-for="OgrenciSoyad" class="form-control">
    </div>

    <div class="mb-3">
        <label for="Eposta" class="form-label">Eposta</label>
        <input asp-for="Eposta" class="form-control">
    </div>

    <div class="mb-3">
        <label for="Telefon" class="form-label">Telefon</label>
        <input asp-for="Telefon" class="form-control">
    </div>
</form>