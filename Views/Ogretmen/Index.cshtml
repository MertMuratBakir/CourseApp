@model IEnumerable<Ogretmen>

    <h2>Öğretmen Listesi</h2>
    <a asp-controller="Ogretmen" asp-action="Create" class="btn btn-primary">Öğretmen Ekle</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;" class="text-center">@Html.DisplayNameFor(m => m.OgretmenId)</th>
                <th>@Html.DisplayNameFor(m => m.Ad)</th>
                <th>@Html.DisplayNameFor(m => m.Soyad)</th>
                <th style="width: 150px;" class="text-center">İşlemler</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td class="text-center">@Html.DisplayFor(modelItem => item.OgretmenId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ad)</td>
                <td>@Html.DisplayFor(modelItem => item.Soyad)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.OgretmenId"
                        class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.OgretmenId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>